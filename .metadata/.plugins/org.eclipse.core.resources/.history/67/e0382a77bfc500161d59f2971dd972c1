<div class="col-md-6 col-md-offset-3 text-center" ng-controller="eventController as eC">
    <h3>Event Page </h3>
    <form name="form" ng-submit="eC.submit()" role="form" id="form">
    

        <div class="form-group" ng-class="{ 'has-error': form.eventId.$dirty && form.eventId.$error.required }">
            
            <input type="hidden" name="eventId" id="eventId" class="form-control" ng-model="eC.event.eventId"  />
            
        </div>
        <div class="form-group" ng-class="{ 'has-error': form.eventLocation.$dirty && form.eventLocation.$error.required }">
            <label for="eventLocation">Event Location</label>
            <input type="text" name="eventLocation" id="eventLocation" class="form-control" ng-model="eC.event.eventLocation" required />
            <span ng-show="form.eventLocation.$dirty && form.eventLocation.$error.required" class="help-block">Event Location is required</span>
        </div>
        <div class="form-group" ng-class="{ 'has-error': form.eventDate.$dirty && form.eventDate.$error.required }">
            <label for="eventDate">Event Date</label>
            <input type="text" name="eventDate" id="eventDate" class="form-control" ng-model="eC.event.eventDate" required />
            <span ng-show="form.eventDate.$dirty && form.eventDate.$error.required" class="help-block">Event Date is required</span>
        </div>
        
        <div class="form-group" ng-class="{ 'has-error': form.address.$dirty && form.address.$error.required }">
            <label for="address">Address</label>
            <input type="text" name="address" id="address" class="form-control" ng-model="rC.user.address" required />
            <span ng-show="form.address.$dirty && form.address.$error.required" class="help-block">Address is required</span>
        </div>
        
        <div class="form-group" ng-class="{ 'has-error': form.userId.$dirty && form.userId.$error.required }">
            <label for="userId">Username</label>
            <input type="text" name="userId" id="userId" class="form-control" ng-model="rC.user.userId" required />
            <span ng-show="form.userId.$dirty && form.userId.$error.required" class="help-block">Username is required</span>
        </div>
        <div class="form-group" ng-class="{ 'has-error': form.password.$dirty && form.password.$error.required }">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" ng-model="rC.user.password" required />
