<div class="col-md-6 col-md-offset-3" ng-controller="registerController as lC">
    <h2>Login</h2>
    <form name="LoginForm" ng-submit="lc.login()" role="form">
        <div class="form-group" ng-class="{ 'has-error': LoginForm.userId.$dirty && LoginForm.userId.$error.required }">
            <label for="username">Username</label>
            <input type="text" name="userId" id="userId" class="form-control" ng-model="lc.user.userId" required />
            <span ng-show="LoginForm.userId.$dirty && LoginForm.userId.$error.required" class="help-block">Username is required</span>
        </div>
        <div class="form-group" ng-class="{ 'has-error': LoginForm.password.$dirty && LoginForm.password.$error.required }">
            <label for="password">Password</label>
            <input type="password" name="password" id="password" class="form-control" ng-model="lc.user.password" required />
            <span ng-show="LoginForm.password.$dirty && LoginForm.password.$error.required" class="help-block">Password is required</span>
        </div>
        <div class="form-actions">
            <button type="submit" ng-disabled="LoginForm.$invalid " class="btn btn-primary">Login</button>
            
            <a href="#!/register" class="btn btn-link">Register</a>
        </div>
    </form>
